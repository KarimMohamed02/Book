<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    android:padding="20dp"
    tools:context=".MainActivity">
    
    <ImageView
        android:id="@+id/iconIv"
        android:src="@drawable/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
       />
    
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconIv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Welcome to Book App "
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        tools:textsize ="16sp"
        />


    <Button
        android:id="@+id/hackersBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/skipBtn"
        android:layout_marginBottom="290dp"
        android:text="Hackers"
        android:textColor="@color/white"
        android:background="@drawable/shape_button01"
        />
    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/skipBtn"
        android:layout_marginBottom="10dp"
        android:text="Login"
        android:textColor="@color/white"
        android:background="@drawable/shape_button01"
        />


    <Button
        android:id="@+id/skipBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_button02"
        android:text="Contrinue Without Login"
        android:textColor="@color/purple_500"
        />

    <ImageView
        android:id="@+id/pauseMusicButton"
        android:layout_width="82dp"
        android:layout_height="65dp"
        android:layout_above="@id/hackersBtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="128dp"
        app:srcCompat="@drawable/pause" />

    <ImageView
        android:id="@+id/playMusicButton"
        android:layout_width="82dp"
        android:layout_height="65dp"
        android:layout_above="@id/hackersBtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="198dp"
        app:srcCompat="@drawable/play" />

</RelativeLayout>